    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
			<div class="form-row">
				Please input producer's name. Note that name is required field. 
			</div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Producer</button>
        </form>
    </div>
</div>
