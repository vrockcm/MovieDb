<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
		    <div class="form-row">
				Modify an existing movie's name, rating, release date, duration, and genre. 
				Note that name and release dates are required fields. Rating is input as a number of minutes.
			</div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" id="name" required>
				</div>
                <div class="form-group col-md-4">
					<label for="rating">Rating</label>
                    <select id="rating" name="rating" class="form-control">
						<option value="excellent">excellent</option>
						<option value="good">good</option>
						<option value="mediocre">mediocre</option>
						<option value="poor">poor</option>
						<option value="terrible">terrible</option>
						<option value=""></option>
                    </select>
                </div>
				<div class="form-group col-md-4">
                    <label for="released">Released</label>
                    <input type="date" class="form-control" name="released" id="released" required>
				</div>
				<div class="form-group col-md-4">
                    <label for="duration">Duration</label>
                    <input type="text" class="form-control" name="duration" id="duration" >
				</div>
                <div class="form-group col-md-4">
					<label for="genre">Genre</label>
                    <select id="genre" name="genre" class="form-control">
						<option value="horror">horror</option>
						<option value="comedy">comedy</option>
						<option value="romance">romance</option>
						<option value="documentary">documentary</option>
						<option value="mystery">mystery</option>
						<option value=""></option>
                    </select>
                </div>
								<div class="form-group col-md-4">
                    <select id="producer" name="producer" class="form-control">
                        <option selected disabled>Producer</option>
						<% producer.forEach((producer, index) => { %>
							<option value="<%= producer.id %>">id: <%= producer.id %> name: <%= producer.name %></option>
						<% }) %>
						<option value=""></option>
                    </select>
                </div>
				<div class="form-group col-md-4">
                    <select id="director" name="director" class="form-control">
                        <option selected disabled>Director</option>
						<% director.forEach((director, index) => { %>
							<option value="<%= director.id %>">id: <%= director.id %> name: <%= director.name %></option>
						<% }) %>
						<option value=""></option>
                    </select>
                </div>
				<div class="form-group col-md-4">
                    <select id="cast" name="cast" multiple class="form-control">
                        <option selected disabled>Cast</option>
						<% actor.forEach((actor, index) => { %>
							<option value="<%= actor.id %>">id: <%= actor.id %> name: <%= actor.name %></option>
						<% }) %>
						<option value=""></option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Movie</button>
        </form>
        
</div>
</div>
</body>
</html>