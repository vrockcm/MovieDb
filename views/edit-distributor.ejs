<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (distributor) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
		    <div class="form-row">
				Modify an existing distributor's name and location. Note that name is a required field. 
			</div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Full Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= distributor.name %>" required>
				</div>
				<div class="form-group col-md-4">
                    <label for="loc">Location</label>
                    <input type="text" class="form-control" name="loc" id="loc" value="<%= distributor.location %>">
				</div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Distributor</button>
        </form>
    <% } else { %>
        <p class="text-center">Distributor Not Found. Go <a href="/add">here</a> to add distributors.</p>
    <% } %>
</div>
</div>
</body>
</html>