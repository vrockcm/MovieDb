<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (producer) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
		    <div class="form-row">
				Modify an existing producer's name. Note that name is a required field. 
			</div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Full Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= producer.name %>" required>
				</div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Producer</button>
        </form>
    <% } else { %>
        <p class="text-center">Producer Not Found. Go <a href="/add">here</a> to add producers.</p>
    <% } %>
</div>
</div>
</body>
</html>