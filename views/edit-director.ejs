<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (director) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
		    <div class="form-row">
				Modify an existing director's record, input full name, birth date, and award(s). Note that name and birth date are required fields. 
			</div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Full Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= director.name %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="birth">Birth Date</label>
                    <input type="date" class="form-control" name="birth" id="birth" value="<%= director.birth.toISOString().substring(0, 10) %>" required>
                </div>
				<div class="form-group col-md-4">
                    <label for="award">Award(s)</label>
                    <input type="text" class="award" name="award" id="award" value="<%= director.award %>">
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Director</button>
        </form>
    <% } else { %>
        <p class="text-center">Director Not Found. Go <a href="/add">here</a> to add directors.</p>
    <% } %>
</div>
</div>
</body>
</html>